extends layout

block content
  link(rel='stylesheet', href='/stylesheets/contact.css')
  
  body
    .container
      #photo(style='text-align: center')
        img(style='vertical-align:middle', src='images/left.svg', alt='Left', width='100', height='80')
        span(style='vertical-align:middle;font-size:160%;font-weight: bold')  Contact 
        img(style='vertical-align:middle', src='images/right.svg', alt='Left', width='100', height='80')
        
        p Swing by for a cup of coffee, or leave us a message:
      .row
        .column
          .mapouter
            .gmap_canvas
              iframe#gmap_canvas(width='600', height='500', src='https://maps.google.com/maps?q=university%20of%20bristol&t=&z=15&ie=UTF8&iwloc=&output=embed', frameborder='0', scrolling='no', marginheight='0', marginwidth='0')
              a(href='https://www.whatismyip-address.com') what is my ip
            style.
              .mapouter{position:relative;text-align:right;height:500px;width:600px;}.gmap_canvas {overflow:hidden;background:none!important;height:500px;width:600px;}
        .column
          form(action='/api/user/' method="post")
            label(for='name') First Name
            input#fname(type='text', name='name', placeholder='Your name..')
            label(for='surname') Last Name
            input#lname(type='text', name='surname', placeholder='Your last name..')
            label(for='country') Country
            select#country(name='country')
              option(value='australia') Australia
              option(value='canada') Canada
              option(value='uk') UK
              option(value='usa') USA
            label(for='subject') Subject
            textarea#subject(name='subject', placeholder='Write something..', style='height:170px')
            input(type='submit', value='Submit')


